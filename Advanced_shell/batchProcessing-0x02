#!/bin/bash
# Define the list of Pokémon and the API endpoint

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_URL="https://pokeapi.co/api/v2/pokemon" 
# Loop through each Pokémon in the list
for POKEMON in "${POKEMON_LIST[@]}"; do
    OUTPUT_FILE="${POKEMON}.json"
    ERROR_FILE="errors.txt"
    # Make the API request and handle success or failure
    response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL/$POKEMON")
    http_code=$(tail -n1 <<< "$response")
    if [ "$http_code" -eq 200 ]; then
        echo "Successfully retrieved data for $POKEMON."
    else
        echo "Failed to retrieve data for $POKEMON with HTTP code: $http_code"
        echo "Error retrieving data for $POKEMON: $response" >> "$ERROR_FILE"
    fi
# Add a delay to handle potential rate-limiting
    sleep 1
done