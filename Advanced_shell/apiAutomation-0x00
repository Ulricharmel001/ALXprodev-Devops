#!/bin/bash

# Define the API endpoint and output files
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json" 
ERROR_FILE="errors.txt"
# Make the API request and handle success or failure
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")
http_code=$(tail -n1 <<< "$response")

if [ "$http_code" -eq 200 ]; then
    echo "API request successful."
else
    echo "API request failed with HTTP code: $http_code"
    echo "Error: $response" >> "$ERROR_FILE"
fi