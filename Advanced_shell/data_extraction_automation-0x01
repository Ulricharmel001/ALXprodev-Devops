#!/bin/bash
# Define the input JSON file
INPUT_FILE="data.json"
# Extract the required fields using jq
name=$(jq -r '.name' "$INPUT_FILE")
height=$(jq -r '.height' "$INPUT_FILE")
weight=$(jq -r '.weight' "$INPUT_FILE")
type=$(jq -r '.types[0].type.name' "$INPUT_FILE")
# Format and display the output  
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."



